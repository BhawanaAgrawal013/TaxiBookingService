<div class="row">
    <div class="col-md-4">
        <form asp-action="DriverLocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                @Html.DropDownList("State", new SelectList((List<string>)ViewBag.States), "--Select--", new { @id="State", @class="form-control"})
                <span asp-validation-for="State" class="text-danger"></span>
            </div>

            <div class="form-group" id="locationCityDiv">
                <label for="City">City</label>
                <div>
                    <select class="form-control" id="City" name="City" title="City"></select>
                </div>
            </div>

            <br />
            <div class="form-group" id="locationAreaDiv">
                <label for="Area">Area</label>
                <div>
                    <select class="form-control" id="Area" name="Area" title="Area"></select>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Street" class="control-label required"></label>
                <input asp-for="Street" class="form-control" type="text"/>
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Latitude" class="control-label" hidden></label>
                <input asp-for="Latitude" id="Latitude" class="form-control" type="hidden"/>
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Longitude" class="control-label" hidden></label>
                <input asp-for="Longitude" id="Longitude" class="form-control" type="hidden"/>
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                  <input type="submit" value="Enter" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>